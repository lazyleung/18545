echo Concatenating ROMS...
gc bin/0.dat,bin/1.dat,bin/2.dat,bin/3.dat -Enc Byte -Read 512 | sc bin/combine.dat -Enc Byte

gc bin/gbc0.dat,bin/gbc1.dat,bin/gbc2.dat,bin/gbc3.dat -Enc Byte -Read 512 | sc bin/combine.dat -Enc Byte

echo Generating Flash file from data file...
perl dat2hex.pl bin/combine.dat bin/combine.hex

promgen -r bin/combine.hex -p mcs -data_width 16 -w -o combine-short.mcs
